<div class="login main">
	<%= semantic_form_for @player, :url => registered_login_path do |f| %>
		<%= f.inputs :name => "Login" do %>
			<%= f.input :email %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit, :label => 'Play', :button_html => {:class => 'btn large'} %>
		<% end %>
	<% end %>

	<p class="support_line"><%= link_to 'Not registered? Click here to register', root_path, {:id => 'welcome'} %></p>
</div>
