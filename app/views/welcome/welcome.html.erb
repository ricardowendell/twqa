<div class="welcome login main">
	<%= semantic_form_for @player, :url => registered_login_path do |f| %>
		<%= f.inputs :name => "Login to Play" do %>
			<%= f.input :email %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit, :label => 'Play', :button_html => {:class => 'button'} %>
		<% end %>
	<% end %>

	<p class="support_line"><%= link_to 'Not registered? Click here to register!', new_player_path %></p>
</div>